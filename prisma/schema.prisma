generator client {
  provider = "prisma-client-js"
}

generator kysely {
  provider = "prisma-kysely"
  output = "./kysely"
  fileName = "types.ts"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model Media {
  id              Int @id @default(autoincrement())
  url             String
  title           String?
  caption         String?
  polygonId       Int
  polygon         Polygon @relation(fields: [polygonId], references: [id], onDelete: Cascade)
}

model Website {
  id              Int @id @default(autoincrement())
  url             String
  title           String?
  polygonId       Int
  polygon         Polygon @relation(fields: [polygonId], references: [id], onDelete: Cascade)

  @@index([id])
}

model Change {
  id              Int @id @default(autoincrement())
  createdAt       DateTime
  description     String?
  polygonId       Int
  polygon         Polygon @relation(fields: [polygonId], references: [id], onDelete: Cascade)

  @@index([id])
}

model Relation {
  id              Int @id @default(autoincrement())
  description     String?
  relatedToId     Int
  relatedTo       Polygon @relation("related_to", fields: [relatedToId], references: [id])
  relatedFromId   Int
  relatedFrom     Polygon @relation("related_from", fields: [relatedFromId], references: [id])

  @@index([id])
}

model User {
	id                Int @id @default(autoincrement())
  createdAt         DateTime  @default(now())
	email             String @unique
  password          String
	name              String?
  permissions       String[] @default(["api", "profile"])
  organization      String?
  verification_key  String? @default(uuid())
  email_verified    Boolean @default(false)
  agreed_treaty     Boolean @default(false)
  api_key           String? @default(dbgenerated("nanoid()")) @db.VarChar(22)

  @@index([id, email])
}

model Polygon {
	id              Int @id @default(autoincrement())
	name            String
  slug            String? @unique
  sources         String?
  color           String?
  pronunciation   String?
  category        String?
  published       Boolean @default(false)
  media           Media[]
  websites        Website[]
  changelog       Change[]
  relatedTo       Relation[] @relation(name: "related_from")
  relatedFrom     Relation[] @relation(name: "related_to")
  geometry        Unsupported("geometry(MultiPolygon, 4326)")?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  @@index([slug])
}
