generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Media {
  id              Int @id @default(autoincrement())
  url             String
  polygonId       Int
  polygon         Polygon @relation(fields: [polygonId], references: [id], onDelete: Cascade)
}

model Website {
  id              Int @id @default(autoincrement())
  url             String
  title           String?
  polygonId       Int
  polygon         Polygon @relation(fields: [polygonId], references: [id], onDelete: Cascade)
}

model Change {
  id              Int @id @default(autoincrement())
  createdAt       DateTime  @default(now())
  description     String?
  polygonId       Int
  polygon         Polygon @relation(fields: [polygonId], references: [id], onDelete: Cascade)
}

model Relation {
  id              Int @id @default(autoincrement())
  description     String?
  related_polyId  Int
  related_poly    Polygon @relation("related_poly", fields: [related_polyId], references: [id])
  polygonId       Int
  polygon         Polygon @relation("referenced_poly", fields: [polygonId], references: [id], onDelete: Cascade)
}

model User {
	id              Int @id @default(autoincrement())
  createdAt       DateTime  @default(now())
	email           String @unique
  password        String?
	name            String?
  permissions     String[] @default(["api", "profile"])
  organization    String?
  api_key         String? @default(dbgenerated("nanoid()")) @db.VarChar(22)
}

model Polygon {
	id              Int @id @default(autoincrement())
	name            String
  depr_slug       String?
  description     String?
  pronunciation   String?
  category        String?
  published       Boolean @default(false)
  media           Media[]
  websites        Website[]
  changelog       Change[]
  relatedFrom     Relation[] @relation(name: "related_poly")
  relatedTo       Relation[] @relation(name: "referenced_poly")
  geometry        Unsupported("geometry(MultiPolygon, 4326)")?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
}
